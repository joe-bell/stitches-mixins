{
  "name": "stitches-mixins",
  "version": "0.0.4",
  "description": "Sass-style shorthand utils for Stitches ðŸ¥£",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joe-bell/stitches-mixins.git"
  },
  "author": "Joe Bell <joe@joebell.co.uk>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/joe-bell/stitches-mixins/issues"
  },
  "homepage": "https://github.com/joe-bell/stitches-mixins#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testMatch": [
      "**/test/*.{ts,tsx}"
    ]
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "microbundle --no-compress --tsconfig tsconfig.json",
    "dev": "npm run build -- watch",
    "clean": "rimraf {dist,.rts2*}",
    "test": "jest",
    "lint:src": "tsc --noEmit",
    "lint:test": "tsc --noEmit test/*test.ts",
    "lint": "concurrently \"npm:lint:*\"",
    "format": "prettier --write",
    "commit": "git-cz"
  },
  "peerDependencies": {
    "@stitches/core": ">= 0.1.0-canary.3"
  },
  "devDependencies": {
    "@babel/core": "7.12.16",
    "@babel/preset-env": "7.12.16",
    "@babel/preset-typescript": "7.12.16",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@stitches/core": "0.1.0-canary.3",
    "@types/jest": "26.0.20",
    "babel-jest": "26.6.3",
    "commitizen": "4.2.3",
    "concurrently": "5.3.0",
    "husky": "5.0.9",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "microbundle": "0.13.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "typescript": "4.1.5"
  }
}
